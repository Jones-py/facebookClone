<div class="container">

   <div class="row justify-content-center">
     <div class="col-10">
      <%=render 'shared/errors' %>
     <%=form_with(model: @chat, class:"shadow p-3 mb-3 bg-white rounded", local: true, url: choose_new_or_edit) do |form| %>
      <div class="form-group row justify-content-center">
        <%= form.label :post, class: "clo-2 col-form-label" %>
        <div class="col-10">
         <%= form.text_area :post, rows: 10, class:"form-control shadow rounded",placeholder: "Post contents" %>
         </div>
      </div>
      <div class="row justify-content-center"><%= form.submit class:"btn btn-success btn-sm" %></div>
    <% end %>
    <div class="row justify-content-center"><%=link_to '[Return to menu]', chats_path%></div>
  </div>
</div>
</div>
