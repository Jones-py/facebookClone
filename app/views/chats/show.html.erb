
<div class="container">
  <div class="row justify-content-md-center"><h5>Post Details</h5></div>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
     <div class="card text-center shadow  mb-5 bg-white rounded">
      <div class="card-header font-italic text-success">
      by: John Chimfwembe
      </div>
      <div class="card-body">
      <h5 class="Post"></h5>
        <%=@chat.post %>
        <br>
        <br>
        <%=image_tag @chat.image.url,:size => "200x180" %>
        <br>
        <br>
        <%= link_to "Edit", edit_chat_path(@chat), class: "btn btn-outline-success" %>
        <%= link_to "Delete", chat_path(@chat), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
        <%=link_to 'Return to Timeline', chats_path(@chat), class: "btn btn-outline-success" %>
    </div>
    <div class="card-footer text-muted">
      <small> <%=time_ago_in_words(@chat.created_at)%> ago </small>
    </div>
  </div>
  </div>
  </div>

</div>
